/* pages/information/information.wxss */
page {
  background-color: #EEEEEE;
}

.container {
  padding: 40rpx;
  display: flex;
  flex-direction: column; 
  height:100%; 
}

.item {
  padding: 20rpx;
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  border: 1rpx solid rgb(0, 0, 0);
  border-radius: 20rpx;
}

.label {
  width: 300rpx;
  font-size: 36rpx;
  color: #333;
}

.value {
  font-size: 36rpx;
  color: #666;
}

.ava-wrapper {
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.avatar {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}

.getava {
  text-align: center;
  font-size: 26rpx;
  margin-left: 20rpx;
  border-radius: 50%;
  background-color: #5fdd9a;
}

.button {
  width: 100%;
  height: 80rpx;
  text-align: center;
  background-color: #5fdd9a;
  color: rgb(0, 0, 0);
  font-size: 32rpx;
  border-radius: 12rpx;
  margin-top: 40rpx;
}



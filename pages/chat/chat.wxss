.container {
  padding-top: 240rpx;
}

.head {
  z-index: 10;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
}
view,text,image{
  box-sizing: border-box;
}
.flex-box-start{
    display: relative;
    justify-content: start;
}

.slogon{
  height: 100rpx;
  width: 100rpx;
}
.flex-box-end{
    display: flex;
    justify-content: flex-end;
}

.chat-area{
    width: 100%;
    height: calc(100vh - 120rpx);
    background-color: #EEEEEE;
    font-weight: 400;
    z-index: 5;
    /*padding-bottom: 140rpx;*/
}

.chat-area > scroll-view{
    position: relative;
    height: 100%;
    padding: 20rpx 20rpx 10rpx 20rpx;
    box-sizing: border-box;
}

.newnew {
  transform: scale(0.8);
  margin-bottom: 0;
}

.chat-his .new{
  display: flex;
  flex-direction: column;
  transform: translate(-80rpx);
}

.chat-his .flex-box-end{
    flex-direction: row-reverse;
    justify-content: flex-start!important;
}
.chat-his .chat-time{
  font-size: 24rpx;
  color: #b7b7b7;
  margin-top: 0rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  text-align: center;
  transform: translate(80rpx);
}

.chat-his .chat-main{
    align-items: flex-start!important;
}

.chat-his .chat-msg{
    background-color: #ffffff;
    color: #000000;
}

.chat-his .audioformat {
    transform: scaleX(-1);
}

.chat-his .timeformat {
  transform: scaleX(-1);
}

.chat-his .chat-msg:before{
    content: '';
    position: absolute;
    width: 0;
    height: 0;
    border-width: 14rpx 20rpx;
    border-style: solid;
    border-color: transparent rgb(255, 255, 255) transparent transparent;
    left: -40rpx;
    top: 30rpx;
}

.chat-his .chat-msg:after{
    display: none;
}

.chat-his .chat-head{
    margin-right: 30rpx;
    margin-left: 0!important;
}

.chat-his .chat-img{
    justify-content: flex-start!important;
}

.chat-his .chat-custom .item:after{
    background: #000000!important;
}

.chat-headPortrait{
    width: 100%;
    height: 100%;
    border-radius: 50%;
}

.new{
  display: flex;
  flex-direction: column;
  transform: translate(80rpx);
}

/* merge消息样式 */
.relaytitle {
  font-size: 34rpx;
  margin-bottom: 6rpx;
}

.relayabstract {
  font-size: 28rpx;
  color:rgba(128, 128, 128, 0.7);
}

.relayabstractList {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}
.relayline {
  width: 100%;
  height: 1rpx;
  background-color: rgba(153, 153, 153,0.2) ;
  margin-top: 4rpx;
  margin-bottom: 4rpx;
}

.relayfoot {
  font-size: 24rpx;
  color:rgba(128, 128, 128, 0.8);
}
.relaycontainer {
  display: flex;
  flex-direction: column;
}

.chat-msg.clicked::before {
  border-color: transparent rgba(235, 235, 235, 0.8) transparent transparent;
}

.chat-msg.clicked::after {
  border-color: transparent rgba(235, 235, 235, 0.8) transparent transparent;
}

.chat-msg.clicked {
  background-color: rgba(235, 235, 235, 0.8) ;
}

.chat-head{
    width: 100rpx;
    height: 100rpx;
    margin-left: 30rpx;
    flex: none;
}

.chat-end{
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 24rpx;
    color: #8B8B8B;
    margin-bottom: 40rpx;
}

.chat-main{
    width: 100%;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    justify-content: center;
}


.chat-row{
    margin: 30rpx 0;
}

.chat-name{
    font-size: 26rpx;
    color: #7C7C7C;
    padding-left: 20rpx;
    margin-bottom: 10rpx;
}

.chat-time{
    font-size: 24rpx;
    color: #b7b7b7;
    margin-top: 0rpx;
    display: flex;
    justify-content: center;
    align-items: center;
    text-align: center;
    transform: translate(-80rpx);
}

.chat-msg{
    display: inline-block;
    position: relative;
    max-width: calc(100% - 100rpx);
    background-color: #0093A2;
    padding: 26rpx 30rpx;
    border-radius: 10rpx;
    font-size: 28rpx;
    word-wrap: break-word;
    color: #FEFEFE;
    margin-left: 6rpx;
    /*font-weight: bold;*/
    min-height: 90rpx;
}

.chat-msg:after{
    content: '';
    position: absolute;
    width: 0;
    height: 0;
    border-width: 14rpx 20rpx;
    border-style: solid;
    border-color: transparent transparent transparent #0093A2;
    right: -38rpx;
    top: 30rpx;
}


.chat-custom .row{
    display: flex;
    width: 100%;
    margin: 10rpx 0;
}

.chat-custom .row-left{
    width: 150rpx;
    flex: none;
}

.chat-custom .row-right{
    flex: auto;
    white-space: initial;
}

.chat-custom .row .item{
    position: relative;
    margin-right: 32rpx;
}

.chat-custom .item:after{
    content: '';
    width: 2rpx;
    height: 30rpx;
    background: #ffffff;
    position: absolute;
    right: -16rpx;
    top: 50%;
    transform: translateY(-50%);
}

.chat-custom .row .item:last-child:after{
    width: 0;
}

.btn-wrap{
    display: flex;
    flex-direction: column;
    align-items: center;
}

.btn-wrap .item{
    width: 80%;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100rpx;
    margin: 20rpx 0;
    border-radius: 20rpx;
    background: dodgerblue;
    color: white;
    font-size: 40rpx;
    font-weight: bold;
    z-index: 9999;
}

/* 图片消息 */
.chat-img{
    width: 100%;
    margin: 30rpx 0;
    display: flex;
    flex-grow: 1;
    justify-content: flex-end;
}

.chat-pic {
    max-width: 360rpx;
    height: 360rpx;
    background-repeat: no-repeat;
    background-size: center;
    background-position: center;
    border-radius: 4rpx;
    position: relative;
}

.chat-progress{
    position: absolute;
    left: 0;
    right: 0;
    top: 0;
    bottom: 0;
    margin: auto;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    background-color: rgba(29, 29, 29, 0.548);
    color: #fff;
}

 /* 音频消息 */
 .audio{
  height: 100%;
  display: flex;
  align-items: center;
  flex-direction: row-reverse;
}
.ico{
  width: 40rpx;
  background-color: transparent;
}
.time{
  font-size: 28rpx;
  color: #232323;
  margin-right: 18rpx;
}

/* 录音 */
.record-modal {
  height: 230rpx;
  width: 260rpx;
  background-color: rgba(0, 0, 0, 0.8);
  position: fixed;
  top: 400rpx;
  right: 0;
  left: 0;
  margin: auto;
  border-radius: 14px;
  display: flex;
  flex-direction: column;
  z-index: 7;
}
.wrapper {
  display: flex;
  box-sizing: border-box;
  padding: 47rpx 60rpx 26rpx 60rpx;
  align-items: center;
  justify-content: space-between;
}
.icon1{
  width: 100rpx;
}
.modal-loading{
  width: 100rpx;
  height: 48rpx;
}
.modal-title{
  text-align:center;
  color: white;
  font-size: 26rpx;
}

@keyframes loader {
    0% {
        -webkit-transform:rotate(0deg);
        transform:rotate(0deg);
    }
    100% {
        -webkit-transform:rotate(360deg);
        transform:rotate(360deg);
    }
}

.loader {
    border-top:8rpx solid rgba(0,0,0,0.1);
    border-right:8rpx solid rgba(0,0,0,0.1);
    border-bottom:8rpx solid rgba(0,0,0,0.1);
    border-left:8rpx solid #555;
    transform:translateZ(0);
    animation:loader 600ms infinite linear;
    transition:all 500ms ease;
    opacity:1;
}

.loader,.loader:after {
    border-radius:50%;
    width:40rpx;
    height:40rpx;
}


/* pages/chooseCounselor/chooseCounselor.wxss */
page {
  background-color: #EEEEEE;
}
.title {
  text-align:center;
  padding: center;
  font-size: 40rpx;
  font-weight: bold;
  margin-top: 20rpx;
}

.counselor-list {
  margin: 30rpx;
}

.counselor-item {
  display: flex;
  background: #fff;
  margin: 40rpx;
  margin-bottom: 20rpx;
  border: 1rpx solid rgba(0, 0, 0);
  border-radius: 10rpx;
  position: relative;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  border: 1rpx solid rgba(0, 0, 0,0.05);
  margin: 30rpx;
}

.counselor-info {
  margin-left: 30rpx;
  width: 80%;
}

.complexinfo {
  margin-top: 10rpx;
  display: flex;
  justify-content: space-between; /* 使用空间均分，使得state紧靠在右上方 */
  align-items: center; /* 垂直居中对齐 */
}

.past {
  background-color: dimgrey;
  color: #fff;
  font-size: 24rpx;
  text-align: center;
  padding: 2px ;
  border-radius: 10rpx;
  margin-left: 120rpx;
}
.state {
  position:relative;
  right: 20rpx;
  color: #fff;
  font-size: 24rpx; 
}

.free {
  text-align: center;
  width: 100%;
  padding: 2px ;
  border-radius: 10rpx;
  background-color:	 	#2E8B57;
}

.busy {
  text-align: center;
  width: 100%;
  padding: 2px ;
  border-radius: 10rpx;
  background-color:	 	 	#8B0000;
}

.pingjia {
  font-size: 28rpx;
  color: darkgray;
  margin-top: 10rpx;
}

.score {
  margin-top: 5rpx;
}

.vacant {
  height:2rpx;
}

